<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/legislator_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.daxing.patriots.LegislatorDetails">

        <LinearLayout
            android:id="@+id/top_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/fav_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="30dp"
                android:src="@drawable/fav1"/>

            <ImageView
                android:id="@+id/facebook_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="30dp"
                android:src="@drawable/f"/>

            <ImageView
                android:id="@+id/twitter_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="30dp"
                android:src="@drawable/t"/>
            <ImageView
                android:id="@+id/website_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:src="@drawable/w"/>
        </LinearLayout>

    <ImageView
        android:id="@+id/iv_avater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/top_link"/>

        <LinearLayout
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/iv_avater"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/chamber_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/d"
                android:adjustViewBounds="true"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/party_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N.A."/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitle"
            android:layout_centerHorizontal="true">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_name"
                    android:text="Name:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_name"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_email"
                    android:text="Email:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_email"
                    android:layout_height="wrap_content"
                    android:layout_width="50dp"
                    android:maxLines="2"
                    android:lines="2"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_chamber"
                    android:text="Chamber:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_chamber"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_contact"
                    android:text="Contact:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_contact"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_start_term"
                    android:text="Start Term:"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_start_term"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_end_term"
                    android:text="End Term:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_end_term"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow7"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_term"
                    android:text="Term:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3">

                    <ProgressBar
                        android:id="@+id/content_term"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        />
                    <TextView
                        android:id="@+id/tv_progress_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/content_term"
                        android:layout_alignRight="@id/content_term"
                        android:layout_alignBottom="@id/content_term"
                        android:background="@android:color/transparent"
                        android:gravity="center" />
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow8"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_office"
                    android:text="Office:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.3"/>

                <TextView
                    android:id="@+id/content_office"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="N.A."
                    android:maxLines="2"
                    android:lines="2"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.7"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow9"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_state"
                    android:text="State:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_state"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow10"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_fax"
                    android:text="Fax:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_fax"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow11"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/attr_birthday"
                    android:text="Birthday:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"/>

                <TextView
                    android:id="@+id/content_birthday"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="N.A."
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</ScrollView>